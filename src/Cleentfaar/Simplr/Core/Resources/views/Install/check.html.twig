{% extends "CleentfaarSimplrCmsBundle:Install:layout.html.twig" %}
{% trans_default_domain "installation" %}
{% block title 'Welcome!' %}
{% block content %}
    <!-- Main component for a primary marketing message or call to action -->
    <div class="welcome-box">
        <div class="row">
            <div class="col-lg-12">
                <h1>{{ 'title.check'|trans }} <small>{{ 'slogan.check'|trans }}</small></h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 hidden-phone hidden-tablet">
                <img src="{{ asset('bundles/cleentfaarsimplrcms/install/img/liftoff_small.png') }}" class="illustration"/>
            </div>
            <div class="col-md-8 col-xs-12 col-sm-12">
                <h2>{{ 'subtitle.check'|trans }}</h2>

                <p>{{ 'intro.check'|trans|raw }}</p>

                <p>
                    <a class="btn btn-lg btn-primary" href="{{ path('simplr_install_wizard_step1') }}" role="button">{{ 'link.continue'|trans }} &raquo;</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
