{% trans_default_domain "installation" %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="{{ asset('ico/favicon.ico') }}">

    <title>{{ 'title'|trans }}</title>

    <!-- Bootstrap core CSS -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">

    {% stylesheets filter="cssrewrite" output="css/simplr/styles.min.css"
    '@CleentfaarSimplrCmsBundle/Resources/assets/install/less/styles.less'
    %}
    <link href="{{ asset_url }}" rel="stylesheet">
    {% endstylesheets %}
    {% stylesheets '@CraueFormFlowBundle/Resources/assets/css/buttons.css' %}
    <link type="text/css" rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <style>
        {% stylesheets filter="cssrewrite" output="css/font-awesome.min.css"
            '@CleentfaarSimplrCmsBundle/Resources/assets/backend/css/font-awesome.css'
        %}
        @import url({{ asset_url|raw }});
        {% endstylesheets %}
        {% stylesheets filter="cssrewrite" output="css/fonts.min.css"
            '@CleentfaarSimplrCmsBundle/Resources/assets/backend/less/fonts.less'
        %}
        @import url({{ asset_url|raw }});
        {% endstylesheets %}
    </style>

    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
</head>

<body>
<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">{{ 'link.toggle_navigation'|trans }}</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">{{ 'title'|trans }}</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('simplr_install_welcome') }}">{{ 'link.welcome'|trans }}</a></li>
                <li><a href="{{ path('simplr_install_wizard') }}">{{ 'link.wizard'|trans }}</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'link.useful_links'|trans }} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('simplr_install_check') }}">{{ icon('list') }} {{ 'link.check'|trans }}</a></li>
                        <li><a href="{{ path('simplr_install_update') }}">{{ icon('globe') }} {{ 'link.update'|trans }}</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path('simplr_install_about') }}">{{ icon('info-sign') }} {{ 'link.about'|trans }}</a></li>
                    </ul>
                </li>
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</div>

<div class="container">

    {% block content %}{% endblock %}

</div> <!-- /container -->

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{ asset('js/jquery.js') }}"></script>
<script src="{{ asset('js/bootstrap.js') }}"></script>
</body>
</html>
